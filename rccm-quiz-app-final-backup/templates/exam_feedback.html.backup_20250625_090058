{% block scripts %}
<script>
    function bookmarkQuestion(questionId) {
        fetch('/api/bookmark', { // ä»®ã®APIã‚¨ãƒ³ãƒ‰ãƒã‚¤ãƒ³ãƒˆ
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ question_id: questionId }),
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showBookmarkSuccessModal();
            } else {
                alert('ç™»éŒ²ã«å¤±æ•—ã—ã¾ã—ãŸ: ' + (data.error || 'ä¸æ˜ãªã‚¨ãƒ©ãƒ¼'));
            }
        })
        .catch((error) => {
            console.error('Error:', error);
            alert('ç™»éŒ²ä¸­ã«ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸã€‚');
        });
    }

    function showBookmarkSuccessModal() {
        const myModal = new bootstrap.Modal(document.getElementById('bookmarkSuccessModal'));
        myModal.show();
        
        // 2ç§’å¾Œã«è‡ªå‹•çš„ã«é–‰ã˜ã‚‹
        setTimeout(() => {
            myModal.hide();
        }, 2000);
    }
</script>

<div class="modal fade" id="bookmarkSuccessModal" tabindex="-1" aria-labelledby="bookmarkSuccessModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bookmarkSuccessModalLabel">ç™»éŒ²å®Œäº†</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ã“ã®å•é¡Œã‚’å¾©ç¿’ãƒªã‚¹ãƒˆã«ç™»éŒ²ã—ã¾ã—ãŸï¼
      </div>
    </div>
  </div>
</div>

{% endblock %} 