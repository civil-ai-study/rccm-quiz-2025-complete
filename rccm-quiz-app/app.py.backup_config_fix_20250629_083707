    except Exception as e:
        logger.error(f"ãƒªãƒ¼ãƒ€ãƒ¼ãƒœãƒ¼ãƒ‰ã‚¨ãƒ©ãƒ¼: {e}")
        return f'<div class="alert alert-danger">ã‚¨ãƒ©ãƒ¼: {str(e)}</div>'


